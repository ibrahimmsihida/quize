<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.QuizMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- تأكيد إزالة ActionBar نهائياً -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Background colors. -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorError">@color/error_color</item>
        <!-- Text colors. -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif</item>
        <!-- تطبيق تأثيرات الانتقال بين الأنشطة -->
        <item name="android:windowAnimationStyle">@style/ActivityTransition</item>
    </style>
</resources>