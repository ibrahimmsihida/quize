<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- نمط الزوايا المستديرة للصور -->
    <style name="ShapeAppearance.Material3.Corner.Medium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <!-- نمط الأزرار -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- نمط البطاقات -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- نمط الانتقال بين الأنشطة -->
    <style name="ActivityTransition">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
    
    <!-- نمط الشرائح -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">12sp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipCornerRadius">12dp</item>
    </style>
</resources>